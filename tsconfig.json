{
  "compilerOptions": {
    "target": "esnext", // Changed to esnext for modern features
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true, // Crucial for processing .js and .jsx files
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // Use "react-jsx" for modern React
    "baseUrl": "./src", // Set baseUrl to src as per your structure
    "paths": {
      "@/components/*": ["./components/*"], // Alias for components
      "@/utils/*": ["./utils/*"], // Alias for utils
      "@/*": ["./*"] // General alias for anything directly under src
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js", // Include .js files
    "src/**/*.jsx" // Include .jsx files
  ],
  "exclude": ["node_modules"]
}
